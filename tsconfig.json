{
  "compilerOptions": {
    "outDir": "dist",
    "moduleResolution": "Node",
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "*": ["types/*"]
    }
  },
  "exclude": [
    "node_modules"
  ]
}
