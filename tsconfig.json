  "compilerOptions": {
    "outDir": "dist",
    "moduleResolution": "Node",
    "module": "commonjs",
    "target": "es6",
    "lib": ["ES2020"],
    "sourceMap": true,
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "*": ["types/*"]
    }
  },
  "include": [
    "src/**.ts"
  ],
}
